<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ImageView for the book cover -->

    <!-- TextView for the album title -->
    <TextView
        android:id="@+id/albumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="albumTitle"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- TextView for the artist name -->

    <!-- TextView for the release year -->
    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artistName"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/releaseYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="releaseYear"
        android:textSize="14sp" />

    <!-- TextView for the genre -->
    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="genre"
        android:textSize="14sp" />

    <!-- TextView for the track count -->
    <TextView
        android:id="@+id/trackCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="trackCount"
        android:textSize="14sp" />
</LinearLayout>
